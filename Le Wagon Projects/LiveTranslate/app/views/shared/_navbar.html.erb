<div class="<%= params[:controller] == 'users' ? 'navbar-wagon-white' : 'navbar-wagon-trans' %>">
  <div class="live-translate-root">
    <a href="/">live<strong>translate</strong></a>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="navbar-wagon-item live-translate-root">
      <%= link_to "How it works", root_path %>
    </div>
    <% if user_signed_in? %>
      <div class="navbar-wagon-item <%= params[:controller] == 'users' ? 'nav-selected' : 'live-translate-root' %>">
        <%= link_to "Profile", user_path(current_user) %>
      </div>
      <div class="navbar-wagon-item live-translate-root">
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </div>
    <% else %>
      <div class="navbar-wagon-item live-translate-root">
        <%= link_to "Sign-up", new_user_registration_path %>
      </div>
      <div class="navbar-wagon-item live-translate-root">
        <%= link_to "Login", new_user_session_path %>
      </div>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <div class="navbar-wagon-item">
            <%= link_to "How it works", root_path, class: "drop-link" %>
          </div>
        </li>
        <% if user_signed_in? %>
        <li>
          <div class="navbar-wagon-item">
            <%= link_to "Profile", user_path(current_user), class: "drop-link" %>
          </div>
        </li>
        <li>
          <div class="navbar-wagon-item">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "drop-link" %>
          </div>
        </li>
        <% else %>
          <li>
            <div class="navbar-wagon-item">
              <%= link_to "Sign-up", new_user_registration_path, class: "drop-link" %>
            </div>
          </li>
          <li>
            <div class="navbar-wagon-item">
              <%= link_to "Login", new_user_session_path, class: "drop-link" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
