<div class="login-page">
  <div class="live-translate-root" id="logo-form">
    <a href="/">live<strong>translate</strong></a>
  </div>
  <div class="login-left">
    <%= image_tag "login.svg", :id => "login-image" %>
  </div>

  <div class="login-right">
    <div class="form-box">
      <ul class="login-nav nav nav-justified">
        <li role="presentation" class="<%= 'active' if params[:register] != "true" %>"><a href="#login" data-toggle="tab">LOG IN</a></li>
        <li role="presentation" class="<%= 'active' if params[:register] == "true" %>"><a href="#signup" data-toggle="tab">REGISTER</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane <%= 'active' if params[:register] != "true" %>" id="login">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :defaults => { :input_html => { :class => "inputs" } }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          placeholder: "Email",
                          label: false %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          placeholder: "Password",
                          label: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
            </div>
            <div class="form-actions centre-item">
              <%= f.button :submit, "Log in", :class => "button" %>
            </div>
          <% end %>
        </div>
        <div class="tab-pane <%= 'active' if params[:register] == "true" %>" id="signup">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :defaults => { :input_html => { :class => "inputs" } }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :first_name, label: false, placeholder: "First Name" %>
              <%= f.input :last_name, label: false, placeholder: "Surname" %>
              <%= f.input :user_type, collection: ["Business", "Teacher", "Student"], label: false, prompt: "Please Select" %>
              <%= f.input :institution, label: false, placeholder: "Institution" %>
              <%= f.input :email,
                          required: true,
                          autofocus: true ,
                          input_html: { value: params["email"], autocomplete: "email" },
                          label: false,
                          placeholder: "Email"%>
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" },
                          label: false,
                          placeholder: "Password" %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" },
                          label: false,
                          placeholder: "Confirm Password" %>
            </div>
            <div class="form-actions centre-item">
              <%= f.button :submit, "Sign up", :class => "button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

