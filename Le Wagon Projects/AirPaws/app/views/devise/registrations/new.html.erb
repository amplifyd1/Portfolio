      <div class="lgn">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form form-inputs">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "email", id: "first_name" }%>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "email", id: "last_name" }%>
            <%= f.input :location,
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "email", id: "location" }%>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", id: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", id: "password" } %>
            <div class="form form-actions">
              <%= f.button :submit, "Sign up", id: "submit" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
