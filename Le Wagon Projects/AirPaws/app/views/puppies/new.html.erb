
<h1>Add a bundle of cuteness</h1>

<div class="banner-new"></div>

<div class='row'>
  <div class ='col-xs-12'>
    <%= form_for(@puppy, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class='control-label col-sm-2'>
        </div>
        <div class='col-sm-3'>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Give it a name. Nothing silly..', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class='control-label col-sm-2'>
        </div>
         <div class='col-sm-3'>
          <%= f.text_field :breed, class: "form-control", placeholder: "What brand is it?" %>
         </div>
       </div>
      <div class="form-group">
        <div class='control-label col-sm-2'>
        </div>
         <div class='col-sm-3'>
          <%= f.text_field :age, class: "form-control", placeholder: "How many months old?" %>
         </div>
       </div>
       <div class="form-group">
        <div class='control-label col-sm-2'>
        </div>
         <div class='col-sm-3'>
          <%= f.text_field :price, class: "form-control", placeholder: "What you charging for it?" %>
         </div>
       </div>
       <div class="form-group">
        <div class='control-label col-sm-2'>
        </div>
         <div class='col-sm-3'>
          <%= f.text_field :location, class: "form-control", placeholder: "City?" %>
         </div>
       </div>
       <div class="form-group add-photo">
        <div class='control-label col-sm-2 add-photo'>
        </div>
         <div class='col-sm-3'>
         <%= f.file_field :photo%>
         </div>
       </div>
       <!-- <div class="form-group"> -->
        <!-- <div class='control-label col-sm-2'>
          <#%= f.label :photo_cache, as: :hidden %>
        </div>
         <div class='col-sm-8'>
            <#%= f.input :photo_cache, as: :hidden %>
         </div>
       </div> -->
        <div class="form-group">
         <div class="control-label col-sm-4">
          <%= f.submit "Make Pup", class: "btn btn-secondary" %>
         </div>
        </div>
    <% end %>
  </div>
</div>
